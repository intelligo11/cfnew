                            },
                            fa: {
                                title: '1',
                                terminal: '1',
                                congratulations: '1 1 1 ÿ¥ŸÖÿß',
                                enterU: '1 1 1 U 1 ÿ±ÿß Ÿàÿßÿ±ÿØ 1',
                                enterD: '1 1 1 D 1 ÿ±ÿß Ÿàÿßÿ±ÿØ 1',
                                command: '1: connect [',
                                uuid: 'UUID',
                                path: 'PATH',
                                inputU: '1 1 U ÿ±ÿß 1 1 Ÿà Enter ÿ±ÿß 1...',
                                inputD: '1 1 D ÿ±ÿß Ÿàÿßÿ±ÿØ 1 Ÿà Enter ÿ±ÿß 1...',
                                connecting: 'ÿØÿ± 1 1
                                invading: 'ÿØÿ± 1 1...',
                                success: '1 1! ÿØÿ± ÿ≠ÿßŸÑ 1 11
                                error: 'ÿÆÿ∑ÿß: 1 UUID 1',
                                reenter: '1 UUID 1 ÿ±ÿß 1 1 1'
                            }
                        };
                        
                        const t = translations[isFarsi ? 'fa' : 'zh'];
                        
					const terminalHtml = `<!DOCTYPE html>
    <html lang="${langAttr}" dir="${isFarsi ? 'rtl' : 'ltr'}">
